%html{:style => "background:linear-gradient(245deg, #fafbf9, #0c0c0d, #8a888e);width:100%;height:100vh"}
%body{:style => "background:linear-gradient(245deg, #fafbf9, #0c0c0d, #8a888e);width:100%;height:100vh"}

  .card.col-sm-5.mx-auto.mt-5
    .card-body
      %h3.mt-1.mb-3 
        %font{:face => "monospace"} 
          Forgot your password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .actions
              = f.submit "Send me reset password instructions"
        = render "devise/shared/links"


