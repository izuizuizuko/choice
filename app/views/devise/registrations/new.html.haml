
= render 'top/header'
%html{:style => "background:linear-gradient(245deg, #fafbf9, #0c0c0d, #8a888e);width:100%;height:100vh"}
%body{:style => "background:linear-gradient(245deg, #fafbf9, #0c0c0d, #8a888e);width:100%;height:100vh"}
  .card.col-sm-6.mx-auto.mt-5

    .card-body
  
      %h3.mt-1.mb-3 
        %font{:face => "monospace"}新規登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group
          = f.label :email, "メールアドレス", :class => "form-label"
          = f.email_field :email, autocomplete: "email", :class => "form-control"
        .form-group
          = f.label :password, "パスワード (%s文字以上)"%@minimum_password_length, :class => "form-label"
          = f.password_field :password, :class => "form-control"
        .form-group
          = f.label :password_confirmation, "もう一度パスワードを入力してください", :class => "form-label"
          = f.password_field :password_confirmation, :class => "form-control"
        .actions
          = f.submit "アカウントを作成する", :class => "btn btn btn-dark btn-block"
      .mt-2
        すでにアカウントをお持ちですか？#{link_to "ログイン", new_user_session_path}

= render 'top/footer'