= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :class
    = f.text_field :class
  .field
    = f.label :point
    = f.text_field :point
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
