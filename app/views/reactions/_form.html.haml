= form_for @reaction do |f|
  - if @reaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reaction.errors.count, "error")} prohibited this reaction from being saved:"
      %ul
        - @reaction.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :answer
    = f.text_field :answer
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
